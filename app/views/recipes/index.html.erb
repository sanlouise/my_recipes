
<div class="recipe-background">
  <%= render 'shared/page_title', title: "All Recipes" %>
    <ul class="nav nav-tabs text-center">
      <li class="active">
        <%= link_to "Recipes", recipes_path %>
      </li>
      <li>
        <%= link_to "Chefs", chefs_path %>
      </li>
    </ul>
<h2> These are recipes from our users.<br/></h2>

</div>
<div class="row">
  <div class="col-md-4 col-md-offset-4 text-center">
    <%= will_paginate %>
  </div>
</div>


<% @recipes.each do |recipe| %>
  <div class="row">
   
      
    <div class="col-md-4">
      <%= image_tag(recipe.picture.url, size: "300x175", class: "gravatar") if recipe.picture? %>
    </div>
  
 
    
    <div class="col-lg-6 well"> 
      <h3><%= link_to recipe.name, recipe_path(recipe) %> </h3>
        <h4><%= recipe.summary %></h4>
        
          <% if recipe.styles.any? %>
          <p>Style: <%= render recipe.styles %></p>
        <% end %>
        
        <% if recipe.ingredients.any? %>
        <p>Ingredients: <%= render recipe.ingredients %></p>
         <% end %>
      <p>
        <span class="quiet">
          <small>
            Created: <%= time_ago_in_words(recipe.created_at) %> ago.
          </small>
        </span>
         <span class="quiet">
          <small>
            Updated: <%= time_ago_in_words(recipe.updated_at) %> ago.
          </small>
        </span>
    </div>

     <div class="col-md-2">
       <section class="chef_info center">
         <%= link_to gravatar_for(recipe.chef, size: 100), chef_path(recipe.chef) %>
       <h5>Chef: <%= recipe.chef.name %></h5>
       
      </section>
      </div>
    
  </div>  
  <hr/>
<% end %>

<div class="row">
  <div class="col-md-4 col-md-offset-4 text-center">
    <%= will_paginate %>
  </div>
</div>