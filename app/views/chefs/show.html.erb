<%= render 'shared/page_title', title: "Chef: " + @chef.name %>
  
<div class="row">
    <div class="col-md-4 col-md-offset-4 text-center">
      <%= gravatar_for @chef, size: 200 %>
      <hr/>
   </div>
</div>

<div class="row">
  <span class="col-md-4 col-md-offset-4 text-center">
    <h3>Recipes</h3>
    <%= will_paginate @recipes %>
  </span>
</div>

<% @recipes.each do |recipe| %>
  <div class="row">
    <div class="col-md-6 col-md-offset-2 well"> 
      <h3><%= link_to recipe.name, recipe_path(recipe) %> </h3>
      <h4><%= link_to recipe.summary %></h4>
      <p>
        <span class="quiet">
          <small>
            Created: <%= time_ago_in_words(recipe.created_at) %> ago.
          </small>
        </span>
         <span class="quiet">
          <small>
            Updated: <%= time_ago_in_words(recipe.updated_at) %> ago.
          </small>
        </span>

    </div>
    <div class="col-md-2">
      <%= image_tag(recipe.picture.url, size: "250x175", class: "gravatar") if recipe.picture? %>
    </div>
  </div>
<% end %>